<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                inputmode="search"
                label="JSEARCH_FILTER"
                hint="JSEARCH_FILTER"
        />

        <!-- State (Enabled, Disabled) -->
        <field
                name="enabled"
                type="list"
                label="JSTATUS"
                class="js-select-submit-on-change"
                header="COM_ONTHOS_ITEMS_FILTER_HEADER_STATUS"
        >
            <option value="0">JDISABLED</option>
            <option value="1">JENABLED</option>
        </field>

        <!-- Protected (theoretically, whether it's a core extension) -->
        <field
                name="protected"
                type="list"
                label="JPROTECTED"
                class="js-select-submit-on-change"
                header="COM_ONTHOS_ITEMS_FILTER_HEADER_PROTECTED"
        >
            <option value="0">JUNPROTECTED</option>
            <option value="1">JPROTECTED</option>
        </field>

        <!-- Locked (Whether uninstalling and updating is enabled) -->
        <field
                name="locked"
                type="list"
                label="COM_INSTALLER_HEADING_LOCKED"
                class="js-select-submit-on-change"
                header="COM_ONTHOS_ITEMS_FILTER_HEADER_LOCKED"
        >
            <option value="0">COM_ONTHOS_ITEM_LBL_UNLOCKED</option>
            <option value="1">COM_ONTHOS_ITEM_LBL_LOCKED</option>
        </field>

        <!-- Application (Client ID) -->
        <field
                name="client_id"
                type="list"
                label="COM_ONTHOS_ITEM_SUBHEAD_APPLICATION"
                class="js-select-submit-on-change"
                header="COM_ONTHOS_ITEMS_FILTER_HEADER_APPLICATION"
        >
            <option value="0">JSITE</option>
            <option value="1">JADMINISTRATOR</option>
            <option value="3">JAPI</option>
        </field>

        <!-- Type -->
        <field
                name="type"
                type="list"
                label="COM_INSTALLER_FIELD_TYPE_LABEL"
                class="js-select-submit-on-change"
                header="COM_ONTHOS_ITEMS_FILTER_HEADER_TYPE"
        >
            <option value="component">COM_INSTALLER_TYPE_COMPONENT</option>
            <option value="file">COM_INSTALLER_TYPE_FILE</option>
            <option value="language">COM_INSTALLER_TYPE_LANGUAGE</option>
            <option value="library">COM_INSTALLER_TYPE_LIBRARY</option>
            <option value="module">COM_INSTALLER_TYPE_MODULE</option>
            <option value="package">COM_INSTALLER_TYPE_PACKAGE</option>
            <option value="plugin">COM_INSTALLER_TYPE_PLUGIN</option>
            <option value="template">COM_INSTALLER_TYPE_TEMPLATE</option>
        </field>

        <!-- TODO: Folder -->

        <!-- TODO: Package -->


        <!-- TODO: Extensions (Core vs Non-core) -->

        <!-- TODO: Has problem (see the Issues sub-package)
        - Any
        - Missing language files: Declared language files but one or more do not exist
        - Orphaned: Orphan extension (check if it can be adopted, or its update site regenerated)
        - Missing Children
        - Broken: Detected as broken (w/ uninstall option)
        - Protected: Non-core extensions marked protected (w/ unprotect option)
        - Locked: Non-core extensions marked locked (w/ lock option)
        - Force-Disabled: Protected and disabled, cannot be re-enabled (w/ enable option)
        -->

    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="JGLOBAL_SORT_BY"
                statuses="*,0,1"
                onchange="this.form.submit();"
                default="id DESC"
                validate="options"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="extension_id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="extension_id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="name ASC">JGLOBAL_TITLE_ASC</option>
            <option value="name DESC">JGLOBAL_TITLE_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                label="JGLOBAL_LIST_LIMIT"
                default="25"
                onchange="this.form.submit();"
        />
    </fields>
</form>